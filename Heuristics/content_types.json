      "url_patterns": [
        "/careers?/",
        "/jobs?/",
        "/join-us",
        "/hiring",
        "/opportunities",
        "/openings?/"
      ],
      "url_weight": 15,
      "title_patterns": [
        "\\bcareers?\\b",
        "\\bjobs?\\b",
        "\\bhiring\\b",
        "\\bjoin (us|our team)\\b",
        "\\bopenings?\\b",
        "\\bwe'?re hiring\\b"
      ],
      "title_weight": 10,
      "content_patterns": [
        "\\bapply now\\b",
        "\\bapplication\\b",
        "\\brequirements?:\\b",
        "\\bqualifications?:\\b",
        "\\bresponsibilities:\\b",
        "\\b(full|part)[-\\s]?time\\b",
        "\\bremote\\b",
