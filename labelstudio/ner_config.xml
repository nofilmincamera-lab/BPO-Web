<View>
  <Text name="text" value="$text" granularity="paragraph"/>

  <Header value="Content Type"/>
  <Choices name="content_type" toName="text" choice="single" required="true">
    <Choice value="Case Study"/>
    <Choice value="Blog / Article"/>
    <Choice value="Company Information"/>
    <Choice value="Services / Offerings"/>
    <Choice value="Testimonials / Customers"/>
    <Choice value="Product / Technology"/>
    <Choice value="Pricing"/>
    <Choice value="Documentation / Knowledge Base"/>
    <Choice value="News / Press Release"/>
    <Choice value="Event / Webinar / Workshop"/>
    <Choice value="Legal / Compliance"/>
    <Choice value="Careers / Job Posting"/>
    <Choice value="Landing Page / Marketing"/>
    <Choice value="Other"/>
  </Choices>

  <Header value="Client Industry (Primary)"/>
  <Choices name="industry_primary" toName="text" choice="single" required="false">
    <Choice value="Financial Services &amp; Insurance"/>
    <Choice value="Healthcare &amp; Life Sciences"/>
    <Choice value="Public Sector &amp; Education"/>
    <Choice value="Industrial, Energy &amp; Manufacturing"/>
    <Choice value="Retail, Consumer &amp; E-Commerce"/>
    <Choice value="Travel, Transportation &amp; Logistics"/>
    <Choice value="Technology, Media &amp; Communications"/>
    <Choice value="Business &amp; Professional Services"/>
    <Choice value="Agriculture, Environment &amp; ESG"/>
    <Choice value="Cross-Sector Emerging Industries"/>
  </Choices>

  <Header value="Services (Normalized)"/>
  <Choices name="services" toName="text" choice="multiple" required="false">
    <Choice value="Customer Experience (CX) Operations"/>
    <Choice value="Collections, Credit &amp; Revenue Recovery"/>
    <Choice value="Finance &amp; Accounting (F&amp;A)"/>
    <Choice value="Human Resources (HRO)"/>
    <Choice value="Risk, Compliance &amp; Trust"/>
    <Choice value="AI-Enabled CX &amp; Automation"/>
    <Choice value="Data, Analytics &amp; Insights"/>
    <Choice value="Back-Office &amp; Process Management"/>
    <Choice value="Technology Services"/>
    <Choice value="CX Transformation &amp; Consulting"/>
    <Choice value="Supply Chain &amp; Logistics Management"/>
  </Choices>

  <Header value="Technologies (Normalized)"/>
  <Choices name="tech" toName="text" choice="multiple" required="false">
    <Choice value="Agentic AI"/>
    <Choice value="Generative AI"/>
    <Choice value="Conversational AI"/>
    <Choice value="Predictive AI &amp; ML"/>
    <Choice value="Analytics &amp; BI"/>
    <Choice value="RPA &amp; Automation"/>
    <Choice value="CRM Platforms"/>
    <Choice value="Contact Center Platforms"/>
    <Choice value="Cloud Infrastructure"/>
  </Choices>

  <Header value="Named Entity Recognition (10 Entity Types)"/>
  <Labels name="ner_labels" toName="text">
    <Label value="ORG" background="blue" hint="Organizations, companies, agencies"/>
    <Label value="PERSON" background="red" hint="People, executives, contacts"/>
    <Label value="LOC" background="orange" hint="Countries, cities, regions"/>
    <Label value="PRODUCT" background="#8a2be2" hint="Products, services, offerings"/>
    <Label value="TECHNOLOGY" background="#2e8b57" hint="Tech terms, platforms, tools"/>
    <Label value="INDUSTRY" background="green" hint="Industry sectors, verticals"/>
    <Label value="CATEGORY" background="yellow" hint="Service categories, domains"/>
    <Label value="DATE" background="#8b4513" hint="Dates, quarters, timeframes"/>
    <Label value="MONEY" background="#556b2f" hint="Currency amounts, revenue"/>
    <Label value="PERCENT" background="#4682b4" hint="Percentages, metrics"/>
  </Labels>
  
  <Header value="Entity Relationships (Phase 2)"/>
  <Relations>
    <Relation value="belongs_to" hint="ORG belongs to INDUSTRY"/>
    <Relation value="partners_with" hint="ORG partners with ORG"/>
    <Relation value="provides" hint="ORG provides PRODUCT/SERVICE"/>
    <Relation value="uses" hint="ORG uses TECHNOLOGY"/>
    <Relation value="located_in" hint="ORG/PERSON located in LOC"/>
    <Relation value="works_for" hint="PERSON works for ORG"/>
  </Relations>

  <Header value="NER Entities Summary"/>
  <TextArea name="ner_entities" toName="text"
            placeholder="NER entities will appear here..."
            editable="false"
            rows="3"/>

  <Header value="Company Names"/>
  <TextArea name="company" toName="text"
            placeholder="Detected company names..."
            editable="true"
            rows="2"/>

  <Header value="Countries"/>
  <TextArea name="countries" toName="text"
            placeholder="Detected countries..."
            editable="true"
            rows="2"/>

  <Header value="Regions"/>
  <TextArea name="regions" toName="text"
            placeholder="Detected regions..."
            editable="true"
            rows="2"/>

  <Header value="Source Company Override"/>
  <TextArea name="source_company" toName="text"
            placeholder="Override source company based on manual review..."
            editable="true"
            rows="2"/>
</View>


