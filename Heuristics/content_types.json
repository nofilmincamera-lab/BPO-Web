      "title_weight": 7,
      "content_patterns": [
        "\\bsign up\\b",
        "\\bget started\\b",
        "\\bfree trial\\b",
        "\\bno credit card\\b",
        "\\brequest demo\\b",
        "\\blimited time\\b",
