  "relationships": [
    {
      "value": "belongs_to",
      "description": "Entity belongs to category/industry",
      "example": "Accenture belongs_to Consulting"
    },
    {
      "value": "partners_with",
      "description": "Partnership between entities",
      "example": "IBM partners_with Salesforce"
    },
    {
      "value": "provides",
      "description": "Entity provides product/service",
      "example": "TTEC provides Customer Service"
    },
    {
      "value": "uses",
      "description": "Entity uses technology",
      "example": "Concentrix uses Generative AI"
    },
    {
      "value": "located_in",
      "description": "Entity located in geography",
      "example": "Call center located_in Philippines"
    },
    {
      "value": "works_for",
      "description": "Person works for organization",
      "example": "John Smith works_for Accenture"
    }
  ],
  
  "export_format": {
    "json_min": {
      "description": "Minimal JSON export with entity spans and labels",
      "fields": ["id", "text", "entities", "labels"]
    },
    "json_complete": {
      "description": "Complete JSON with all metadata and relationships",
      "fields": ["id", "text", "entities", "labels", "content_type", "industry", "services", "technologies", "relationships", "metadata"]
    },
    "iob2": {
      "description": "IOB2 format for NER model training",
      "format": "token<TAB>label",
      "example": "Accenture\tB-ORG\nprovides\tO\ncustomer\tB-CATEGORY"
    },
    "spacy": {
      "description": "spaCy training format",
      "format": "[(text, {entities: [(start, end, label)]})]"
    }
  },
  
  "validation_rules": {
    "content_type": {
      "required": true,
      "type": "single_choice"
    },
    "industry_primary": {
      "required": false,
      "type": "single_choice"
    },
    "services": {
      "required": false,
      "type": "multiple_choice"
    },
    "technologies": {
      "required": false,
      "type": "multiple_choice"
    },
    "ner_entities": {
      "min_per_document": 0,
      "max_per_document": 100,
      "min_confidence": 0.5
    }
  },
  
  "annotation_guidelines": {
    "ner_instructions": "Highlight all relevant entities in the text. Focus on organizations, people, locations, products, and technologies related to BPO industry.",
    "relationship_instructions": "After marking entities, draw relationships between related entities. For example, connect organizations to their industries, or products to their providers.",
    "quality_thresholds": {
      "inter_annotator_agreement": 0.85,
      "min_entities_per_doc": 3,
      "review_required_if_confidence_below": 0.7
    }
  }
}



