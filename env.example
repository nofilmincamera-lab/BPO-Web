# BPO Intelligence Pipeline - Environment Configuration
# Copy this to .env and configure

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=bpo_intel
DB_USER=postgres
# Secret file (create with: echo "your_password" > ops/secrets/postgres_password.txt)
# POSTGRES_PASSWORD=  # Alternative to secret file

# Prefect Configuration
PREFECT_API_URL=http://prefect-server:4200/api
PREFECT_WORK_QUEUE=default
PREFECT_SERVER_API_HOST=0.0.0.0
PREFECT_API_DATABASE_CONNECTION_URL=postgresql+asyncpg://prefect:prefect@prefect-db:5432/prefect

# Worker Configuration
HEURISTICS_DIR=/heuristics
DATA_DIR=/data
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HEURISTICS_VERSION=2.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Timezone
TZ=UTC
