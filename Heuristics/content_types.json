{
  "classification_version": "0.1.0",
  "description": "Heuristic rules for web content classification across BPO vendor properties. Matches URL/title/body patterns and structural cues.",
  "rules": [
    {
      "label": "Case Study",
      "url_patterns": [
        "/case-stud(y|ies)",
        "/success-stor(y|ies)",
        "/customer-stor(y|ies)",
        "/clients?-stories"
      ],
      "url_weight": 15,
      "title_patterns": [
        "\\bcase study\\b",
        "\\bsuccess story\\b",
        "\\bcustomer story\\b",
        "\\bhow\\s+\\w+\\s+(achieved|improved|reduced|increased)"
      ],
      "title_weight": 10,
      "content_patterns": [
        "\\b(the\\s+)?(challenge|problem|issue)\\b",
        "\\b(the\\s+)?(solution|approach)\\b",
        "\\b(the\\s+)?(results?|outcome|impact)\\b",
        "\\d+%\\s+(increase|decrease|reduction|improvement|growth)",
        "(improved|reduced|increased)\\s+by\\s+\\d+%",
        "(said|stated|explained)\\s+\\w+,?\\s+(ceo|director|manager)"
      ],
      "pattern_weight": 2,
      "min_patterns": 3,
      "structure_signals": {
        "has_metrics": true,
        "has_sections": [
          "challenge",
          "solution",
          "result"
        ],
        "has_quotes": true,
        "min_length": 400
      },
      "min_score": 18
    },
    {
      "label": "Blog / Article",
      "url_patterns": [
        "/blog/",
        "/article/",
        "/insights?/",
        "/news/",
        "/\\d{4}/\\d{2}/"
      ],
      "url_weight": 12,
      "title_patterns": [
        "\\bhow to\\b",
        "\\b\\d+\\s+(ways|tips|reasons|steps|trends|things)\\b",
        "\\bguide to\\b",
        "\\bultimate guide\\b",
        "\\bwhat is\\b",
        "\\bwhy\\s+\\w+"
      ],
      "title_weight": 8,
      "content_patterns": [
        "\\bpublished\\s+(on|by)\\b",
        "\\bauthor:",
        "\\bby\\s+\\w+\\s+\\w+\\s*$",
        "\\bminute read\\b",
        "\\bshare this\\b",
        "\\bin this (article|post)\\b",
        "\\bread more:"
      ],
      "pattern_weight": 1.5,
      "min_patterns": 2,
      "structure_signals": {
        "has_date": true,
        "min_length": 300,
        "max_length": 5000
      },
      "min_score": 12
    },
    {
      "label": "Company Information",
      "url_patterns": [
        "/about",
        "/company",
        "/who-we-are",
        "/our-story",
        "/about-us"
      ],
      "url_weight": 15,
      "title_patterns": [
        "\\babout\\s+(us|our\\s+company)",
        "\\bwho we are\\b",
        "\\bour (story|mission|vision|values)",
        "\\bcompany overview\\b",
        "\\bmeet\\s+(the\\s+)?team\\b"
      ],
      "title_weight": 10,
      "content_patterns": [
        "\\b(founded|established)\\s+(in\\s+)?\\d{4}",
        "\\bheadquarters?\\b",
        "\\b\\d+[+\\s]+(employees|team members|staff)",
        "\\bour (mission|vision|values?)\\b",
        "\\bwe (believe|are committed|strive)\\b",
        "\\bleadership team\\b"
      ],
      "pattern_weight": 2,
      "min_patterns": 2,
      "structure_signals": {
        "has_founding_year": true,
        "min_length": 200
      },
      "min_score": 14
    },
    {
      "label": "Services / Offerings",
      "url_patterns": [
        "/services?/",
        "/solutions?/",
        "/offerings?/",
        "/what-we-do",
        "/capabilities"
      ],
      "url_weight": 12,
      "title_patterns": [
        "\\bservices?\\b",
        "\\bsolutions?\\b",
        "\\bofferings?\\b",
        "\\bwhat we (do|offer)\\b",
        "\\bcapabilities\\b"
      ],
      "title_weight": 8,
      "content_patterns": [
        "\\bwe (offer|provide|deliver)\\b",
        "\\bour services include\\b",
        "\\bcomprehensive\\b",
        "\\bend-to-end\\b",
        "\\btailored\\b",
        "\\bcustomized\\b",
        "\\bservice portfolio\\b"
      ],
      "pattern_weight": 1.5,
      "min_patterns": 2,
      "structure_signals": {
        "has_list": true,
        "min_length": 300
      },
      "min_score": 13
    },
    {
      "label": "Product / Technology",
      "url_patterns": [
        "/product/",
