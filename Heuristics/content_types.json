      "pattern_weight": 2,
      "min_patterns": 3,
      "structure_signals": {
        "has_code_blocks": true,
        "has_steps": true,
        "min_length": 400
      },
      "min_score": 16
    },
    {
      "label": "News / Press Release",
      "url_patterns": [
        "/news/",
        "/press/",
        "/press-release/",
        "/newsroom/",
        "/media/",
        "/announcements?/"
